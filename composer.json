{
    "name": "dmytrof/doctrine-modification-events-bundle",
    "type": "symfony-bundle",
    "description": "Symfony DmytrofDoctrineModificationEventsBundle to create and handle events on entities updates",
    "keywords": ["Doctrine", "Modification events"],
    "license": "MIT",
    "version": "v2.0",
    "time": "2025-04-02",
    "authors": [
        {
            "name": "Dmytro Feshchenko",
            "email": "dmytro.feshchenko@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "doctrine/orm": "^3.5",
        "symfony/event-dispatcher": "^7.0 || ^8.0",
        "symfony/framework-bundle": "^7.0 || ^8.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^3.1",
        "phpunit/phpunit": "^9.5 || ^10.5 || ^12.4",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.22",
        "squizlabs/php_codesniffer": "^3.13",
        "symfony/yaml": "^7.0 || ^8.0",
        "vimeo/psalm": "^5.18 || ^6.13"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Dmytrof\\DoctrineModificationEventsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dmytrof\\DoctrineModificationEventsBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "make unit-tests"
    }
}
