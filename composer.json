{
    "name": "dmytrof/doctrine-modification-events-bundle",
    "type": "symfony-bundle",
    "description": "Symfony DmytrofDoctrineModificationEventsBundle to create and handle events on entities updates",
    "keywords": ["Doctrine", "Modification events"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmytro Feshchenko",
            "email": "dmytro.feshchenko@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "doctrine/orm": "^2.6",
        "symfony/framework-bundle": "^5.4 || ^6.0",
        "symfony/event-dispatcher": "^5.4 || ^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.5",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.8",
        "vimeo/psalm": "^5.18"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Dmytrof\\DoctrineModificationEventsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dmytrof\\DoctrineModificationEventsBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "phpunit"
    }
}
